@model List<Hotel>

@{
    ViewData["Title"] = "Hotel Page";
}

<div class="text-center">
    <h1 class="display-4">Explore Luxurious Hotels</h1>
    <a type="button" asp-controller="Hotel" asp-action="createHotel" class="btn btn-success create-hotel-btn">Create Hotel</a>
    <div class="container">
        @foreach (var hotel in Model)
        {
            <div class="item">
                <div class="card">
                    <img src="@hotel.imgUrl" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@hotel.Name</h5>
                        <p class="card-text">@hotel.location</p>
                        <p class="card-text">Rating: @hotel.rating</p>
                        <a href="@Url.Action("view", "Hotel", new { id = hotel.Id })" class="btn btn-primary">View</a>
                        <button type="button" class="btn btn-danger" onclick="confirmDelete(@hotel.Id)">Delete</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


<style>
    h1 {
        color: white;
    }

    .container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        align-items: center;
        width: 1000px;
    }

    .item {
        flex: 0 0 30%;
        margin-bottom: 20px;
        text-align: center;
    }

    .create-hotel-btn {
        position: absolute;
        top: 100px;
        right: 20px;

        background-color: blue;
    }
</style>
